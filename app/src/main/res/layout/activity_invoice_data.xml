<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:onClick="changefocus"
    tools:context="com.InvoiceData_Version1.InvoiceData">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/alert_info"
                        android:layout_width="250dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dp"
                        android:textColor="#ff0000"/>
                    <Button
                        android:id="@+id/getRegistered"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Click"
                        android:onClick="getRegistered"
                        android:textSize="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/userimage"
                        android:layout_width="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="50dp"
                        android:background="@drawable/male_user"
                        />
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textColor="#06066c"/>
                        <TextView
                            android:id="@+id/UserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#06066c"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registered car"
                            android:textColor="#06066c"/>
                        <TextView
                            android:id="@+id/item"
                            android:layout_width="match_parent"
                            android:layout_marginTop="3dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="#06066c"

                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteY="419dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/InvoiceNo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:hint="Invoice No."
                            android:inputType="number"
                            android:singleLine="true"/>

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteY="419dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/date"
                            android:layout_width="match_parent"

                            android:layout_height="40dp"
                            android:hint="Invoice Date"
                            android:inputType="date"
                            android:singleLine="true"/>

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteY="419dp">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/GrossAmount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Invoice Amount(Gross)"
                            android:inputType="numberDecimal"
                            android:singleLine="true"/>

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/InvoiceImage"
                        android:layout_width="86dp"
                        android:layout_height="69dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.11"/>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="115dp"
                        android:layout_height="57dp"
                        android:background="@drawable/cameraicon"
                        android:onClick="clickImage"/>
                    <Button
                        android:layout_width="134dp"
                        android:layout_height="63dp"
                        android:onClick="SaveIntoCsvFile"
                        android:text="Save(.csv file)"
                      />

                </LinearLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:onClick="SyncToFtp"
                    android:text="SyncToFtp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.469"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/listview_dialog"
                             android:layout_height="match_parent"
                             android:layout_width="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>




    </FrameLayout>

</android.support.constraint.ConstraintLayout>
